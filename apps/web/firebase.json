{
  "hosting": {
    "public": "./public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "next"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "pages",
      "static",
      "components",
      "next.config.js"
    ]
  },
  "functions": {
    "source": "."
  }
}
